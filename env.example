# 服务器配置
NODE_ENV=production
PORT=5200

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/study_frontend_web
SHAREDATA_MONGODB_URI=mongodb://localhost:27017/sharedata

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# 前端URL配置
FRONTEND_URL=https://study.mareate.com

# CORS配置
CORS_ORIGIN=https://study.mareate.com

# 代码执行服务配置（如果需要）
CODE_EXECUTOR_URL=http://localhost:3000

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# 日志配置
LOG_LEVEL=info

# 安全配置
BCRYPT_ROUNDS=12

# 邮件配置（如果需要）
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# 第三方服务配置（如果需要）
REDIS_URL=redis://localhost:6379
